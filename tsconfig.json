{
  "compilerOptions": {
    "target": "es2015", // or "es6"
    "downlevelIteration": true, // optional but helpful
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": "./",

    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
